package edu.pnu.service;

import java.util.List;

import edu.pnu.dao.MemberDaoH2impl;
import edu.pnu.dao.MemberDaoListimpl;
import edu.pnu.dao.MemberInterface;
import edu.pnu.domain.MemberVO;

public class MemberService {
	
	MemberInterface memberDaoList;
	MemberInterface memberDaoH2;
	
	public MemberService() {
		memberDaoList = new MemberDaoListimpl();
		memberDaoH2 = new MemberDaoH2impl();
	}
	
	public List<MemberVO> getMembers() {
		return memberDaoList.getMembers();
		//return memberDaoH2.getMembers();
	}
	
	public MemberVO getMember(Integer id) {
		return memberDaoList.getMember(id);
		//return memberDaoH2.getMember(id);
	}
	
	public MemberVO addMember(MemberVO member) {
		return memberDaoList.addMember(member);
		//return memberDaoH2.addMember(member);
	}
	
	public MemberVO updateMember(MemberVO member) {
		return memberDaoList.updateMember(member);
		//return memberDaoH2.updateMember(member);
	}
	
	public int deleteMemeber(Integer id) {
		return memberDaoList.deleteMemeber(id);
		//return memberDaoH2.deleteMemeber(id);
	}
	
}
